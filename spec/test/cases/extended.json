  {
    "name": "path_options_set",
    "description": "PathOptions targeting specific path with SET",
    "category": "path_options",
    "content_a": "{\"tags\":[\"a\",\"b\"],\"items\":[1,2]}",
    "content_b": "{\"tags\":[\"b\",\"a\"],\"items\":[2,1]}",
